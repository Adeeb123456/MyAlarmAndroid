<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:orientation="vertical"
    android:layout_height="310dp">
    
    <CheckBox
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="SATURDAY"
        android:textColor="@android:color/black"
        android:id="@+id/sat_chkbx"
        />

    <CheckBox
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="SUNDAY"
        android:textColor="@android:color/black"
        android:id="@+id/sun_chkbx"
        />

    <CheckBox
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="MONDAY"
        android:textColor="@android:color/black"
        android:id="@+id/mon_chkbx"
        />


    <CheckBox
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="TUESDAY"
        android:textColor="@android:color/black"
        android:id="@+id/tue_chkbx"
        />

    <CheckBox
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="WEDNESDAY"
        android:textColor="@android:color/black"
        android:id="@+id/wed_chkbx"
        />


    <CheckBox
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="THURSDAY"
        android:textColor="@android:color/black"
        android:id="@+id/thu_chkbx"
        />

    <CheckBox
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="FRIDAY"
        android:textColor="@android:color/black"
        android:id="@+id/fri_chkbx"
        />
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:text="ok"
            android:textAlignment="viewEnd"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"

            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/_10sdp"
            android:id="@+id/ok_btn_repeatdays_selection"
            />

    </RelativeLayout>

</LinearLayout>